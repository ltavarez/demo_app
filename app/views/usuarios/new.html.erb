<% provide(:title, 'Sign up') %> <h1>Sign up</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@usuario) do |f| %>

		<%= f.label :nombre %>
		<%= f.text_field :nombre %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %><br />
		<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
