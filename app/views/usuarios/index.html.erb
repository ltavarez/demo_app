<% provide(:title, 'All users') %> <h1>All users</h1>
<%= will_paginate %>
<ul class="users">
	<% @usuarios.each do |u| %>
	<li>
		<%= gravatar_for u%>
		<%= link_to u.nombre, u %>
		<% if current_user.admin? && !current_user?(u) %>
		| <%= link_to "delete", u, method: :delete,
		data: { confirm: "You sure?" } %>
		<% end %>
	</li>
	<% end %>
</ul>
<%= will_paginate %>