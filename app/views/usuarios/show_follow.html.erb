<% provide(:title, @title) %>
<div class="row">
	<aside class="span4">
		<section>
			<%= gravatar_for @usuario %>
			<h1><%= @usuario.nombre %></h1>
			<span><%= link_to "view my profile", @usuario %></span>
			<span><b>Microposts:</b> <%= @usuario.miniposts.count %></span>
		</section>
		<section>
			<section>
				<% @usuario ||= current_user %>
				<div class="stats">
					<a href="<%= following_usuario_path(@usuario) %>"> <strong id="following" class="stat"> <%= @usuario.followed_users.count %> </strong> following </a>
					<a href="<%= followers_usuario_path(@usuario) %>"> <strong id="followers" class="stat"> <%= @usuario.followers.count %> </strong> followers </a>
				</div>
			</section>
			<% if @usuarios.any? %>
			<div class="user_avatars">
				<% @usuarios.each do |user| %>
				<%= link_to gravatar_for(user), user %>
				<% end %>
			</div>
			<% end %>
		</section>
	</aside>
	<div class="span8">
		<h3><%= @title %></h3>
		<% if @usuarios.any? %>
		<ul class="users">
			<%= %>
		</ul>
		<%= will_paginate %>
		<% end %>
	</div>
</div>